<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:id="@+id/cardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/first_row_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/img_view"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:src="@drawable/img_donasi_1"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/judul_donasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Judul Konten"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/nama_donatur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="Nama Donatur: {nama} "
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/nominal_donasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="Donasi Sebesar Rp. 0"
            android:textSize="12sp"
            android:textColor="#E53935"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>