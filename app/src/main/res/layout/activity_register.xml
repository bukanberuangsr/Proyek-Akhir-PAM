<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/ellipseTop"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/ellipse1"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/logo_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/form_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo">

        <TextView
            style="@style/inter_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/grey"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_username"
            style="@style/inter_regular"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input"
            android:hint="Masukkan username"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:textColor="@color/grey"
            android:textColorHint="@color/light_grey_text"
            android:textSize="14sp" />

        <TextView
            style="@style/inter_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Email"
            android:textColor="@color/grey"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_email"
            style="@style/inter_regular"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input"
            android:hint="Masukkan email"
            android:inputType="textEmailAddress"
            android:paddingLeft="16dp"
            android:textColor="@color/grey"
            android:textColorHint="@color/light_grey_text"
            android:textSize="14sp" />

        <TextView
            style="@style/inter_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Password"
            android:textColor="@color/grey"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_password"
            style="@style/inter_regular"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input"
            android:hint="Masukkan password"
            android:inputType="textPassword"
            android:paddingLeft="16dp"
            android:textColor="@color/grey"
            android:textColorHint="@color/light_grey_text"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_daftar"
            style="@style/lexend_semibold"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/orange"
            android:text="Daftar"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/login_link"
        style="@style/inter_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Sudah memiliki akun? Masuk"
        android:textColor="@color/tosca"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/form_layout" />

    <ImageView
        android:id="@+id/ellipseBottom"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/ellipse2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
