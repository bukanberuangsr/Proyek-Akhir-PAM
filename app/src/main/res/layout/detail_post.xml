<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Custom Search Bar -->
    <include
        layout="@layout/search_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/judul_kategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Kategori : "
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/btn_makanan"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/makanan"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Makanan "
            android:textStyle="normal"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/pic_post"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:src="@drawable/pic1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lembaga"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Piring Harapan"/>

        <ImageView
            android:id="@+id/ic_verify"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/verify"/>

    </LinearLayout>


    <TextView
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Donasi Nasi Kotak untuk Panti Asuhan"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setiap hari, banyak anak di panti asuhan yang membutuhkan makanan bergizi untuk tumbuh dengan sehat. Kami mengajak Anda untuk berpartisipasi dalam donasi 150 nasi kotak agar mereka dapat menikmati hidangan yang layak. Dengan sedikit bantuan, kita bisa membawa kebahagiaan dan senyum kepada mereka. Mari bersama berbagi kebaikan!"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="380dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="LOGIN"
        android:textStyle="bold" />

</LinearLayout>
