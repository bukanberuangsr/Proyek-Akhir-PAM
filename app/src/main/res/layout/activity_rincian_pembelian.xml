<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".RincianPembelianActivity">

    <!-- CardView sebagai container utama -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Total Belanja -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Belanja"
                android:textSize="20sp"
                android:textColor="@color/grey"
                android:gravity="center"
                style="@style/inter_semibold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp. 50,000"
                android:textSize="36sp"
                android:textColor="@color/tosca"
                android:gravity="center"
                style="@style/inter_semibold"/>

            <!-- Informasi Pelanggan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hi, Peter Griffin"
                android:textSize="20sp"
                android:textColor="@color/grey"
                style="@style/inter_bold"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pembelianmu berhasil!"
                android:textSize="16sp"
                android:textColor="@color/grey"
                style="@style/inter_medium"/>

            <!-- Produk -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/dashed_rectangle"
                android:padding="12dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prime Steaklover"
                        android:textSize="20sp"
                        android:textColor="@color/grey"
                        style="@style/inter_semibold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Steak sapi"
                        android:textSize="16sp"
                        android:textColor="@color/grey"
                        style="@style/inter_regular"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2x"
                    android:textSize="16sp"
                    android:textColor="@color/orange"
                    style="@style/inter_medium"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <!-- Catatan Pembayaran -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tunjukkan rincian belanja anda ke kasir restoran dan bayar dengan uang pas"
                android:textSize="14sp"
                android:textColor="@color/tosca"
                style="@style/inter_regular"
                android:layout_marginTop="12dp"
                android:gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
